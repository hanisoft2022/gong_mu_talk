rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    match /paystub_uploads/{userId}/{fileName} {
      allow write: if isOwner(userId);
      allow read: if false;  // Admin SDK only (paystub verification functions)
    }

    match /profile_images/{userId}/{fileName} {
      allow write: if isOwner(userId);
      allow read: if isSignedIn();  // All signed-in users can view profile images
    }

    // Post images (게시글 이미지)
    match /post_images/{userId}/{postId}/{fileName} {
      allow write: if isOwner(userId);
      allow read: if isSignedIn();  // All signed-in users can view post images
    }

    // Comment images (댓글 이미지)
    match /comments/{year}/{month}/{postId}/{fileName} {
      allow write: if isSignedIn();  // Any signed-in user can upload comment images
      allow read: if isSignedIn();   // All signed-in users can view comment images
    }

    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
