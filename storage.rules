rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    match /paystub_uploads/{userId}/{fileName} {
      allow write: if isOwner(userId);
      allow read: if false;  // Admin SDK only (paystub verification functions)
    }

    match /profile_images/{userId}/{fileName} {
      allow write: if isOwner(userId);
      allow read: if isSignedIn();  // All signed-in users can view profile images
    }

    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
